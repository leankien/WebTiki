@model WebTiki.Models.SANPHAM

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2>Thêm mới</h2>
<form action="/SanPham/Create" method="post" enctype="multipart/form-data" style="margin:20px">

    <div class="form-group">

        <input type="hidden" class="form-control" id="MaSP" name="MaSP" disabled />

    </div>
    <div class="form-group">
        <label>Tên Sản Phẩm</label>
        <input type="text" class="form-control" id="TenSP" name="TenSP" />

    </div>
    <div class="form-group">
        <label>Giá củ</label>
        <input type="text" class="form-control" id="GiaCu" name="GiaCu" />

    </div>
    <div class="form-group">
        <label>Giá mới</label>
        <input type="text" class="form-control" id="GiaMoi" name="GiaMoi" />

    </div>
    <div class="form-group">
        <label>Bài viết</label>
        <textarea type="text" class="form-control" id="BaiViet" name="BaiViet"></textarea>


    </div>
    <div class="form-group">
        <label>Tóm tắt</label>
        <input type="text" class="form-control" id="TomTat" name="TomTat" />

    </div>

    <div class="form-group">
        <label for="DanhMucID">Danh mục</label>
        <input type="text" class="form-control" name="DanhMucID" list="DanhMucID">
        <datalist id="DanhMucID" style="width:300px">
            <option value="1">Thịt, rau củ</option>
            <option value="2">Bách hoá</option>
            <option value="3">Nhà cửa</option>
            <option value="4">Thiết bị số</option>
            <option value="5">Điện thoại</option>
            <option value="6">Mẹ & bé</option>
            <option value="7">Làm đẹp</option>
            <option value="8">Gia dụng</option>
            <option value="9">Thời trang nữ</option>
            <option value="10">Thời trang nam</option>
            <option value="11">Giầy nữ</option>
            <option value="12">Túi nữ</option>
            <option value="13">Giày nam</option>
            <option value="14">Túi nam</option>
            <option value="15">Bali & vali</option>
            <option value="16">Phụ kiện</option>
            <option value="17">Đồng hồ</option>
            <option value="18">Laptop</option>
            <option value="19">Quốc tế</option>
            <option value="20">Voucher</option>
            <option value="21">Xe</option>
            <option value="22">Sách</option>
            <option value="23">Điện tử</option>
            <option value="24">Thể thao</option>
            <option value="25">Máy ảnh</option>
        </datalist>
    </div>

    <div class="form-group">

        <input type="file" id="uploadhinh" name="uploadhinh" accept="image/*" />

    </div>

    <button class="btn btn-primary" type="submit"> Lưu </button>


</form>

@section scripts{
    <script>
        CKEDITOR.replace("BaiViet");
    </script>
}
