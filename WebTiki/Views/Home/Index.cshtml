@model List<WebTiki.Models.SANPHAM>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-9">
        <div class="slideshow-container">

            <!-- Full-width images with number and caption text -->
            <div class="mySlides fade">
                <img src="~/image/slides/43d01da73c8c8d31dc4156194e6c6a9c.png" style="width:100%">
            </div>
            <div class="mySlides fade">
                <img src="~/image/slides/53359951b0443c395b7fd05c8b07fcbe.jpg" style="width:100%">
            </div>
            <div class="mySlides fade">
              
                <img src="~/image/slides/9603b780bf49898e894ef60d6bbd35af.jpg" style="width:100%">
            </div>
            <!-- Next and previous buttons -->
            <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
            <a class="next" onclick="plusSlides(1)">&#10095;</a>
        </div>
        <br>

        <!-- The dots/circles -->
        <div style="text-align:center">
            <span class="dot" onclick="currentSlide(1)"></span>
            <span class="dot" onclick="currentSlide(2)"></span>
            <span class="dot" onclick="currentSlide(3)"></span>
        </div>
    </div>
    <div class="col-md-3">
        <img src="~/image/slides/480fa5a85ba3fa3360532b7eb03fb036.png" style="height:290px">
    </div>
</div>



<section class="footer clearfix bg.footer">
    <section class="footer clearfix bg.footer">
        <div class="container" style="background-color:white">


            <h3><b> Gợi ý hôm nay</b></h3>


        </div>

    </section>
</section>
<div class="row">
    <ul class="products">

        @foreach (var item in Model)


        {
            <li>
                <figure style="margin:10px">
                    <a href="@Url.Action("ChiTietSP","SanPham",new {MaSP=@item.MaSP})" style="text-decoration: none;color:black;">
                        <div class="parent">
                            <img class="image1" src="~/Upload/ImgSP/@item.Img" style="width:300px;" />
                        </div>


                        <h5 class="texnametsp">@item.TenSP</h5>

                        <h4 class="card-text1">@item.GiaMoi ₫</h4>
                        <h5 class="card-text2">@item.GiaCu ₫</h5>
                    </a>
                </figure>
            </li>
        }


    </ul>
</div>




