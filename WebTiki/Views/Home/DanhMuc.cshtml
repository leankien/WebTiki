
@{
    ViewBag.Title = "DanhMuc";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Html.ActionLink("Thêm mới", "Create", "SanPham", null, null);


@if (Model.Count > 0)
{
<div class="row">
    <ul class="products">

        @foreach (var item in Model)


        {
            <li>
                <figure style="margin:10px">
                    <a href="@Url.Action("ChiTietSP","SanPham",new {MaSP=@item.MaSP})" style="text-decoration: none;color:black;">
                        <div class="parent">
                            <img class="image1" src="~/Upload/ImgSP/@item.Img" style="width:300px;" />
                            <img class="image2" src="~/image/ef9dc5d8164bd62b011e54276502b342.png" style="width:150px;" />
                        </div>


                        <h5 class="texnametsp">@item.TenSP</h5>

                        <h4 class="card-text1">@item.GiaMoi ₫</h4>
                        <h5 class="card-text2">@item.GiaCu ₫</h5>
                    </a>
                </figure>
            </li>
        }


    </ul>
</div>
}
else
{
    @:Không có sản phẩm trong danh mục này
}


