
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>
    <meta name="viewport" initial-scale=0">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
</head>
<div style="margin:20px">
    <div >
        <h4><b> Địa chỉ giao hàng</b></h4><br />
        <p>Chọn địa chỉ giao hàng có sẵn bên dưới:</p>
        @foreach (var item in Model)
        {
            <div style="border: 4px dashed green; width:500px">
                <div style="margin:30px">
                    <h3> @item.TenKH</h3>
                    <p>Địa chỉ: @item.DiaChi, @item.PhuongXa, @item.QuanHuyen, @item.TinhTP</p>
                    <p>Điện thoại:@item.DT</p><br />
                    <button aria-expanded="false" class="btn btn-outline-danger" data-toggle="collapse" data-target="#" style="background-color:#0094ff; color:white">Giao đến địa chỉ này</button>
                    <a href="/DiaChi/Delete/@item.MaDC"><button aria-expanded="false" class="btn btn-outline-danger"> Xóa</button></a>
                </div>
            </div>

        }
        <p>Bạn muốn giao hàng đến địa chỉ khác?<a href="#demo" aria-expanded="false" data-toggle="collapse" data-target="#demo" lass="btn btn-outline-danger"> Thêm địa chỉ giao hàng mới</a></p>

    </div>








    <div id="demo" class="collapse">


        <form action="/DiaChi/Create" method="post" enctype="multipart/form-data">

            <div>
                <h4 class="mb-3">Thông tin khách hàng</h4>
                <input type="hidden" class="form-control" id="MaDC" name="MaDC" disabled />
                <div class="row">
                    <div class="col-md-12">
                        <label for="TenKH">Họ tên</label>
                        <input type="text" class="form-control" name="TenKH" id="TenKH"
                               placeholder="Nhập họ và tên">
                    </div>
                    <div class="col-md-12">
                        <label for="DT"> Điện thoại di động</label>
