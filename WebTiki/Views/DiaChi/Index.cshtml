                            <option value=" Bến Tre, Thành phố Bến Tre ">
                            <option value=" Bình Dương, Thành phố Thủ Dầu Một ">
                            <option value=" Bình Định, Thành phố Quy Nhơn ">
                            <option value=" Bình Phước, Thành phố Đồng Xoài ">
                            <option value=" Bình Thuận, Thành phố Phan Thiết ">
                            <option value=" Cà Mau, Thành phố Cà Mau ">
                            <option value=" Cao Bằng, Thành phố Cao Bằng ">
                            <option value=" Cần Thơ, Quận Ninh Kiều ">
                            <option value=" Đà Nẵng, Quận Hải Châu">
                            <option value=" Đắk Lắk, Thành phố Buôn Ma Thuột ">
                            <option value=" Đắk Nông, Thành phố Gia Nghĩa ">
                            <option value=" Điện Biên, Thành phố Điện Biên Phủ ">
                            <option value=" Đồng Nai, Thành phố Biên Hòa ">
                            <option value=" Đồng Tháp, Thành phố Cao Lãnh ">
                            <option value=" Gia Lai, Thành phố Pleiku ">
                            <option value=" Hà Giang, Thành phố Hà Giang ">
                            <option value=" Hà Nam, Thành phố Phủ Lý ">
                            <option value=" Hà Nội, Quận Hoàn Kiếm ">
                            <option value=" Hà Tĩnh, Thành phố Hà Tĩnh ">
                            <option value=" Hải Dương,Thành phố Hải Dương ">
